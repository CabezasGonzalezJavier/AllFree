<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lumbralessoftware.freeall.fragments.LoginTabFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:id="@+id/activity_login_twitter_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_login_size_button"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />
            <com.lumbralessoftware.freeall.views.TwitterLogoutButton
                android:id="@+id/activity_logout_twitter_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_login_size_button"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />
            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_login_size_button"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>