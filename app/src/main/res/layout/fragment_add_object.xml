<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.Relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fragment_add_object_linear_layout_title"
                style="@style/AppTheme.Relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.lumbralessoftware.reusame.views.CustomTextView
                    android:id="@+id/fragment_add_object_name"
                    style="@style/NormalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/fragment_add_object_title_name" />

                <EditText
                    android:id="@+id/fragment_add_object_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_add_object_linear_layout_description"
                style="@style/AppTheme.Relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_add_object_linear_layout_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_detail_margeTop"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.lumbralessoftware.reusame.views.CustomTextView
                    android:id="@+id/fragment_add_object_description"
                    style="@style/NormalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/fragment_add_object_title_description" />

                <EditText
                    android:id="@+id/fragment_add_object_description_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_add_object_linear_layout_conditions"
                style="@style/AppTheme.Relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_add_object_linear_layout_description"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_detail_margeTop"
                android:background="@android:color/white"
                android:orientation="vertical">
                <com.lumbralessoftware.reusame.views.CustomTextView
                    android:id="@+id/fragment_add_object_title_conditions"
                    style="@style/NormalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/title_conditions" />
                <EditText
                    android:id="@+id/fragment_add_object_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/conditions" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_add_object_linear_layout_experies_on"
                style="@style/AppTheme.Relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_add_object_linear_layout_conditions"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_detail_margeTop"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.lumbralessoftware.reusame.views.CustomTextView
                    android:id="@+id/fragment_add_object_experies_on"
                    style="@style/NormalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/activity_detail_title_expire" />

                <Button
                    android:id="@+id/fragment_add_object_add_item_experies_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/black"
                    android:text="@string/fragment_add_object_expires_on"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_add_object_linear_layout_category"
                style="@style/AppTheme.Relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_add_object_linear_layout_experies_on"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_detail_margeTop"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.lumbralessoftware.reusame.views.CustomTextView
                    android:id="@+id/fragment_add_object_category_title"
                    style="@style/NormalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/fragment_add_object_title_category" />

                <Button
                    android:id="@+id/fragment_add_object_add_item_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/black"
                    android:text="@string/fragment_add_object_category_chose"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_add_object_linear_layout_image"
                style="@style/AppTheme.Relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_add_object_linear_layout_category"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_detail_margeTop"
                android:background="@android:color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_add_object_add_photo_imgView"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/no_image" />

            </LinearLayout>
            <Button
                android:id="@+id/fragment_add_object_add_item_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_add_object_linear_layout_image"
                android:layout_marginTop="@dimen/activity_detail_margeTop"
                android:background="@android:color/black"
                android:text="@string/fragment_add_item"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>